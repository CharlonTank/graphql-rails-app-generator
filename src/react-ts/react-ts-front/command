npm init -y
npm install --save-dev @types/react
npm install --save-dev @types/react-dom
npm install --save-dev awesome-typescript-loader
npm install --save-dev css-loader
npm install --save-dev html-webpack-plugin
npm install --save-dev mini-css-extract-plugin
npm install --save-dev source-map-loader
npm install --save-dev typescript
npm install --save-dev webpack
npm install --save-dev webpack-cli
npm install --save-dev webpack-dev-server
npm install react react-dom
touch webpack.config.js
touch tsconfig.json
mkdir src
mkdir src/components
touch src/components/index.html
touch src/components/App.tsx
touch src/index.tsx

dans tsconfig.json ajouter le contenu actuel
dans index.html ajouter le contenu actuel
dans App.tsx ajouter le contenu actuel
dans index.tsx ajouter le contenu actuel

mkdir src/styles
touch src/styles/app.css

dans webpack.config.js ajouter le contenu actuel

ajouter dans le package.json les scripts:
    "start": "webpack-dev-server --open",
    "build": "webpack",
    "generate": "graphql-codegen"

----- INSTALL GRAPHQL AND GRAPHQL GENERATOR -----

npm install graphql
npm install -D @graphql-codegen/cli

npm install --save-dev @graphql-codegen/typescript

touch codegen.yml

schema: http://localhost:3123/graphql
generates:
  ./src/types.d.ts:
    plugins:
      - typescript


npm run generate